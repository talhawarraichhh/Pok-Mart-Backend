  "main": "index.js",

  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --project api/tsconfig.json api/src/server.ts",

    "prisma:generate": "prisma generate",

    "build": "npm run prisma:generate && tsc -p api",
